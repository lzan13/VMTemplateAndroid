<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.main.home.ItemAppletDelegate">

    <ImageView
        android:id="@+id/coverIV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_height="@dimen/vm_dimen_256" />

    <View
        android:layout_width="@dimen/common_0"
        android:layout_height="@dimen/common_0"
        android:background="@drawable/shape_applet_item_mask_bg"
        android:backgroundTint="@color/vm_black"
        app:layout_constraintBottom_toBottomOf="@+id/coverIV"
        app:layout_constraintEnd_toEndOf="@+id/coverIV"
        app:layout_constraintStart_toStartOf="@+id/coverIV"
        app:layout_constraintTop_toTopOf="@+id/coverIV" />

    <TextView
        android:id="@+id/vipTV"
        style="@style/AppText.Tips"
        android:layout_margin="@dimen/vm_dimen_8"
        android:background="@drawable/shape_fillet_common_bg"
        android:paddingStart="@dimen/vm_dimen_8"
        android:paddingTop="@dimen/vm_dimen_2"
        android:paddingEnd="@dimen/vm_dimen_8"
        android:paddingBottom="@dimen/vm_dimen_2"
        android:text="@string/relaxation_world_vip_tips"
        android:textColor="@color/app_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tipsTV"
        style="@style/AppText.Tips"
        android:layout_margin="@dimen/vm_dimen_8"
        android:background="@drawable/shape_fillet_common_bg"
        android:paddingStart="@dimen/vm_dimen_8"
        android:paddingTop="@dimen/vm_dimen_2"
        android:paddingEnd="@dimen/vm_dimen_8"
        android:paddingBottom="@dimen/vm_dimen_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="限免" />

    <TextView
        android:id="@+id/titleTV"
        style="@style/AppText.Title"
        android:layout_marginBottom="@dimen/vm_dimen_4"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/app_title_display"
        app:layout_constraintBottom_toTopOf="@+id/contentTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="标题内容" />

    <TextView
        android:id="@+id/contentTV"
        style="@style/AppText.Tips"
        android:layout_marginStart="@dimen/vm_dimen_8"
        android:layout_marginEnd="@dimen/vm_dimen_8"
        android:layout_marginBottom="@dimen/vm_dimen_4"
        android:ellipsize="end"
        android:lines="2"
        android:paddingStart="@dimen/vm_dimen_16"
        android:paddingEnd="@dimen/vm_dimen_16"
        android:textColor="@color/app_title_display"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="程序描述" />

</androidx.constraintlayout.widget.ConstraintLayout>