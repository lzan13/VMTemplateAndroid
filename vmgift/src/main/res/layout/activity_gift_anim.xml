<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_mask"
    tools:context=".GiftAnimActivity">

    <!--动画背景-->
    <ImageView
        android:id="@+id/giftBGIV"
        android:layout_width="@dimen/vm_dimen_256"
        android:layout_height="@dimen/vm_dimen_256"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/giftIV"
        android:layout_width="@dimen/vm_dimen_144"
        android:layout_height="@dimen/vm_dimen_144"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <com.opensource.svgaplayer.SVGAImageView
        android:id="@+id/giftSVGAIV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:autoPlay="false"
        app:loopCount="1" />

</androidx.constraintlayout.widget.ConstraintLayout>
