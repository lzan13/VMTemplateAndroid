<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/emptyStatusLL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/emptyStatusIV"
        android:layout_width="@dimen/vm_dimen_192"
        android:layout_height="@dimen/vm_dimen_192"
        android:src="@drawable/ic_empty_data" />

    <TextView
        android:id="@+id/emptyStatusTV"
        style="@style/AppText.More"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/vm_dimen_8"
        android:text="暂无数据"
        android:visibility="gone"
        tools:visibility="visible" />
</LinearLayout>