<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vmloft.develop.library.im">

    <!--访问网络-->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--读取手机状态-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!--访问相机-->
    <uses-permission android:name="android.permission.CAMERA" />
    <!--录音权限-->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!--读写存储-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--唤醒锁-->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- 修改音频设置 -->
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <!--悬浮窗权限，最小化通话时使用-->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <!--针对 8.0 以上的悬浮窗权限-->
    <uses-permission android:name="android.permission.SYSTEM_OVERLAY_WINDOW" />

    <application>
        <!--聊天界面-->
        <activity
            android:name=".chat.IMChatActivity"
            android:theme="@style/IMTheme.Chat"
            android:windowSoftInputMode="adjustResize|stateHidden" />

        <!--预览界面-->
        <activity
            android:name=".chat.IMPreviewActivity"
            android:theme="@style/IMTheme.Chat"
            android:windowSoftInputMode="adjustNothing|stateAlwaysHidden" />

        <!--视频通话界面-->
        <activity
            android:name=".call.IMCallVoiceActivity"
            android:theme="@style/IMTheme.Chat"
            android:windowSoftInputMode="adjustNothing|stateAlwaysHidden" />
        <!--视频通话界面-->
        <activity
            android:name=".call.IMCallVideoActivity"
            android:theme="@style/IMTheme.Chat"
            android:windowSoftInputMode="adjustNothing|stateAlwaysHidden" />
    </application>
</manifest>
