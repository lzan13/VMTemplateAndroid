<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/im_common_top_bar_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <!--TopBar 顶部 statusBar 填充-->
    <View
        android:id="@+id/im_common_top_space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/vm_dimen_0"
        />

    <com.vmloft.develop.library.tools.widget.VMTopBar
        android:id="@+id/im_common_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/im_common_top_space"
        />
</RelativeLayout>