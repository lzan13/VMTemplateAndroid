<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <rotate android:fromDegrees="45" android:pivotX="-45%" android:pivotY="90%">
            <shape android:shape="rectangle">
                <size android:width="@dimen/vm_dimen_8" android:height="@dimen/vm_dimen_16" />
                <solid android:color="@color/im_bubble_bg_press" />
            </shape>
        </rotate>
    </item>
    <item>
        <rotate android:fromDegrees="45" android:pivotX="-45%" android:pivotY="90%">
            <shape android:shape="rectangle">
                <size android:width="@dimen/vm_dimen_16" android:height="@dimen/vm_dimen_16" />
                <solid android:color="@color/im_bubble_bg" />
            </shape>
        </rotate>
    </item>
</selector>